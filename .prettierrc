{
	"plugins": ["@trivago/prettier-plugin-sort-imports"],

	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,

	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"quoteProps": "consistent",
	"trailingComma": "all",
	"bracketSpacing": true,
	"objectWrap": "collapse",
	"bracketSameLine": false,
	"arrowParens": "always",
	"endOfLine": "lf"
}
